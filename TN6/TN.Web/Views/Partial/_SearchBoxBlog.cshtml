@{
    Layout = null;
    string searchTerm = null;
}


@using (Html.BeginForm("SearchResults", "Blog", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="input-group margin-bottom-40">
        <input type="search" class="form-control" id="searchTerm" name="searchTerm" placeholder="Search">
        <span class="input-group-btn">
            <button class="btn-u" type="submit">Go</button>
        </span>
    </div>
}
