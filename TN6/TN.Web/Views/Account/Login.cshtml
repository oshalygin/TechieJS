@model TN.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<link rel="stylesheet" href="~/Content/css/pages/page_log_reg_v1.css">

@section TopScripts{

    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.4.min.js"></script>
}

<!--=== Breadcrumbs ===-->
<div class="breadcrumbs">
    <div class="container">
        <h1 class="pull-left">Login</h1>
        <ul class="pull-right breadcrumb">
            <li class="active">Login</li>
        </ul>
    </div><!--/container-->
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->


<section id="loginForm">
    <div class="container content">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "reg-page", role = "form" }))
                {


                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="reg-header">
                        <h2>Login to Your Account</h2>

                        <div class="form-group">
                            <div class="input-group margin-bottom-20">
                                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "UserName" })
                                @Html.ValidationMessageFor(m => m.UserName)
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="input-group margin-bottom-20">
                                <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                        </div>


                        <div class="row">
                            <div class="form-group">
                                
                                    <div class="checkbox">
                                        
                                            @Html.CheckBoxFor(m => m.RememberMe)

                                            @Html.LabelFor(m => m.RememberMe)
                                        
                                    </div>
                                
                                <br />
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-10 col-md-offset-1">
                                            <input type="submit" value="Login" class="btn-u btn-block" />

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <hr />


                        <h2>Login With</h2>


                        <ul class="social-icons text-center">
                            <li><a class="rounded-x social_facebook" data-original-title="Facebook" href="#"></a></li>
                            <li><a class="rounded-x social_twitter" data-original-title="Twitter" href="#"></a></li>
                            <li><a class="rounded-x social_googleplus" data-original-title="Google Plus" href="#"></a></li>
                            <li><a class="rounded-x social_linkedin" data-original-title="Linkedin" href="#"></a></li>
                        </ul>


                        <hr />

                        <p><a class="color-green" href="#">Click Here</a> to reset your password.</p>
                        <h4>Don't have an Account?</h4>
                        <p>
                            <button type="button" class="btn-u btn-block" id="registrationButton">Register</button>

                        </p>

                    </div>
                }
            </div>
        </div>
    </div>
</section>



@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $("#registrationButton").click(function () {
                document.location.href = "Register";
            });
        });

    </script>
}

@section appInit
{
    <script type="text/javascript" src="~/Scripts/app.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function () {
            App.init();
        });
    </script>
}